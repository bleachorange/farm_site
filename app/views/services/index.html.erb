<h1>Listing services</h1>

<table>
  <thead>
    <tr>
      <th>Services</th>
      <th>User</th>
      <th>Profile</th>
      <th>Services name</th>
      <th>Services price</th>
      <th>Services timeslots</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @services.each do |service| %>
      <tr>
        <td><%= service.services_id %></td>
        <td><%= service.user_id %></td>
        <td><%= service.profile_id %></td>
        <td><%= service.services_name %></td>
        <td><%= service.services_price %></td>
        <td><%= service.services_timeslots %></td>
        <td><%= link_to 'Show', service %></td>
        <td><%= link_to 'Edit', edit_service_path(service) %></td>
        <td><%= link_to 'Destroy', service, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

